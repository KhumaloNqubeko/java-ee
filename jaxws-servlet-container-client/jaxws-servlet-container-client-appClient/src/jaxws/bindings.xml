<bindings xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
	wsdlLocation="http://abhijit-lenovo:8080/jaxws-servlet-container/TimeServiceServletContainer?wsdl"
	xmlns:jaxws="http://java.sun.com/xml/ns/jaxws" xmlns:javaee="http://java.sun.com/xml/ns/javaee"
	xmlns="http://java.sun.com/xml/ns/jaxws">
	
	<bindings node="wsdl:definitions">
		<!-- package customization -->
		<package
			name="edu.certification.abhijitsarkar.ocewsd.jaxws.servlet.container.client.generated">
			<javadoc>wsimport generated package</javadoc>
		</package>
	</bindings>

	<!-- wsdl:portType customization -->
	<bindings node="wsdl:definitions/wsdl:portType[@name='TimeServiceSEI']">
		<!-- change the generated SEI class -->
		<class name="TimeServiceSEI">
			<javadoc>Return current time for a Time zone</javadoc>
		</class>
	</bindings>

	<!-- change the generated exception class name -->
	<bindings
		node="wsdl:definitions/wsdl:portType[@name='TimeServiceSEI']/wsdl:operation[@name='getCurrentTime']/wsdl:fault[@name='UnsupportedTimeZoneException']">
		<class name="UnsupportedTimeZoneException">
			<javadoc>Exception generated during computation</javadoc>
		</class>
	</bindings>

	<!-- wsdl:service customization -->
	<bindings
		node="wsdl:definitions/wsdl:service[@name='TimeServiceServletContainer']">
		<!-- change the generated service class -->
		<class name="TimeService">
			<javadoc>Service to return current time for a Time zone</javadoc>
		</class>
	</bindings>

	<!-- Method parameter customization -->
	<bindings
		node="wsdl:definitions/wsdl:portType[@name='TimeServiceSEI']/wsdl:operation[@name='getCurrentTime']">
		<!-- change java method name from getCurrentTime() to getTime() -->
		<method name="getTime" />
		<!-- rename method parameters -->
		<parameter
			part="wsdl:definitions/wsdl:message[@name='getCurrentTime']/wsdl:part[@name='parameters']"
			childElementName="tns:arg0" name="timeZoneID" />
	</bindings>
</bindings>