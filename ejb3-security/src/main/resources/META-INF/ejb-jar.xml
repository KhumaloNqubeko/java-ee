<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" version="3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
	<enterprise-beans>
		<session>
			<ejb-name>SecureBean</ejb-name>
			<ejb-class>edu.certification.abhijitsarkar.ocewsd.ejb3.SecureBean</ejb-class>
			<security-role-ref>
				<!-- role used by the Bean -->
				<role-name>user</role-name>
				<!-- role set up in $JBOSS_HOME/standalone/configuration/application-role.properties -->
				<role-link>AppUser</role-link>
			</security-role-ref>
			<security-role-ref>
				<!-- role used by the Bean -->
				<role-name>guest</role-name>
				<!-- role set up in $JBOSS_HOME/standalone/configuration/application-role.properties -->
				<role-link>AppGuest</role-link>
			</security-role-ref>
		</session>
	</enterprise-beans>
	<assembly-descriptor>
		<security-role>
			<role-name>AppUser</role-name>
		</security-role>
		<security-role>
			<role-name>AppGuest</role-name>
		</security-role>
	</assembly-descriptor>
</ejb-jar>