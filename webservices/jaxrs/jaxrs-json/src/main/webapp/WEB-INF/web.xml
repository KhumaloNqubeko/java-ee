<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>edu.certification.abhijitsarkar.ocewsd.jaxrs.json.config.CalcApplication</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>edu.certification.abhijitsarkar.ocewsd.jaxrs.json.config.CalcApplication</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Secure</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description>Has to be a user</description>
			<role-name>USER</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<!-- Web Server will pop up a dialog box asking for credentials. -->
		<auth-method>BASIC</auth-method>
		<!-- The realm name in GlassFish 
		Configurations/server-config/Security/Realms. -->
		<realm-name>file</realm-name>
	</login-config>
	<security-role>
		<!-- Mapped to role-name in glassfish-web.xml -->
		<role-name>USER</role-name>
	</security-role>
</web-app>